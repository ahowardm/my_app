<% if signed_in? %>
  <h4>Add a Review: </h4>
  <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
    <p>
      <%= f.label :body, "Comments" %><br>
      <%= f.text_area :body, required: true %>
    </p>
    <p>
      <div class="rating"></div>
    </p>
    <p>
      <%= f.submit :submit, class: "btn btn-primary"%>
    </p>
  <% end %>
<% end %>
